# Multi-stage Dockerfile for Astro development with hot reload
FROM node:20-alpine AS base

# Install dependencies needed for some packages
RUN apk add --no-cache libc6-compat

# Set working directory
WORKDIR /app

# Development stage
FROM base AS development

# Copy package files first
COPY package*.json ./

# Install ALL dependencies (including @astrojs/tailwind)
RUN npm ci --verbose

# Copy configuration files
COPY astro.config.mjs ./
COPY tailwind.config.mjs ./
COPY tsconfig.json ./

# Copy source code
COPY . .

# Set development environment
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=3006

# Enable hot reload with polling (important for Docker)
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true

# Expose port
EXPOSE 3006

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3006/ || exit 1

# Start development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3006"]