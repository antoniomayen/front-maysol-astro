---
// src/components/layout/NavbarPages.astro - Full width navbar for non-home pages
import { Home, Info, ShoppingCart, Truck, Calendar, MessageCircle, Menu, X, Facebook } from 'lucide-astro';

// ðŸŽ¯ Datos del menÃº
const menuItems = [
  { text: 'Granjas Maysol', href: '/', icon: Home },
  { text: 'Nosotros', href: '/nosotros', icon: Info },
  { text: 'Productos', href: '/productos', icon: ShoppingCart },
  { text: 'Servicios', href: '/#servicios', icon: Truck },
  { text: 'Noticias', href: '/noticias', icon: Calendar },
  { text: 'Contacto', href: '/#contacto', icon: MessageCircle }
];
---

<!-- ðŸŽ¨ Navbar full width para pÃ¡ginas internas -->
<div class="w-full bg-white sticky top-0 z-50">
  <div class="max-w-[1600px] mx-auto bg-navbar-pages-gradient border-b border-orange-400/30">
    <nav class="w-full">
    <div class="w-full px-4 sm:px-6 lg:px-8 py-3">
      
      <!-- DESKTOP Layout: Centered menu items -->
      <div class="hidden lg:flex items-center justify-between h-14">
        
        <!-- Left: Logo -->
        <div class="flex-1">
          <a href="/" class="flex items-center">
            <div class="w-32 h-32 flex items-center justify-center">
              <img 
                src="/images/logo_maysol-nobg.webp" 
                alt="Maysol Logo" 
                class="w-24 h-24 p-3 transition-all duration-300 hover:scale-110"
                style="filter: brightness(0) saturate(100%) invert(100%);"
              />
            </div>
          </a>
        </div>
        
        <!-- Center: Menu items -->
        <div class="flex items-center space-x-6">
          {menuItems.map((item) => {
            const Icon = item.icon;
            return (
              <a 
                href={item.href}
                class="group flex items-center space-x-2 text-white hover:text-orange-200 px-3 py-2 rounded-lg transition-all duration-300 hover:scale-105 hover:bg-white/10"
              >
                <Icon class="h-4 w-4 text-[#E75015] group-hover:scale-110 transition-all duration-300" />
                <span class="font-medium text-sm">{item.text}</span>
              </a>
            );
          })}
        </div>
        
        <!-- Right: Social buttons -->
        <div class="flex items-center space-x-3 flex-1 justify-end">
          <!-- Facebook -->
          <a
            href="https://www.facebook.com/granjasmaysolgt"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center justify-center px-4 py-3 bg-[#1877f2]/80 backdrop-blur-md hover:bg-[#1877f2]/90 text-white rounded-full transition-all duration-300 hover:scale-110 shadow-lg border border-[#E75015]/50"
            aria-label="Facebook"
          >
            <Facebook class="h-4 w-4 text-white" />
          </a>

          <!-- WhatsApp -->
          <button
            id="whatsapp-trigger-pages"
            class="group flex items-center justify-center px-4 py-3 bg-[#25d366]/80 backdrop-blur-md hover:bg-[#25d366]/90 text-white rounded-full transition-all duration-300 hover:scale-110 shadow-lg border border-[#E75015]/50"
            aria-label="WhatsApp"
          >
            <svg class="h-4 w-4 text-white" fill="white" viewBox="0 0 24 24">
