      <!-- ðŸ“± MOBILE: Solo Hamburger -->
      <div class="md:hidden flex items-center absolute left-4">
        <button 
          id="mobile-menu-trigger"
          class="p-2 text-white hover:text-white hover:bg-[#E75015]/20 rounded-full transition-all duration-300 hover:scale-105"
