      {menuItems.map((item) => {
        const Icon = item.icon;
        return (
          <a 
            href={item.href}
            class="mobile-menu-item flex items-center space-x-3 text-white hover:text-white hover:bg-[#E75015]/20 px-4 py-3 rounded-full transition-all duration-300 hover:scale-105"
          >
            <Icon class="h-5 w-5 text-[#E75015]" />
            <span class="font-medium">{item.text}</span>
          </a>
        );
      })}
      
      <!-- Facebook mÃ³vil -->
      <a
        href="https://www.facebook.com/granjasmaysolgt"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center space-x-3 text-[#1877f2] hover:text-[#1877f2] hover:bg-[#1877f2]/10 px-4 py-3 rounded-full transition-all duration-300 hover:scale-105"
      >
        <Facebook class="h-5 w-5" />
        <span class="font-medium">SÃ­guenos en Facebook</span>
