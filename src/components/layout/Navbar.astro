  { text: 'Productos', href: '/#productos', icon: ShoppingCart },
  { text: 'Servicios', href: '/#servicios', icon: Truck },
  { text: 'Noticias', href: '/noticias', icon: Calendar },
  { text: 'Contacto', href: '/#contacto', icon: MessageCircle }
