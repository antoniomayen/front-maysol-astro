    <div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-center h-16">
      
      <!-- ðŸ’» DESKTOP: Links principales centrados -->
      <div class="hidden lg:flex items-center space-x-2 flex-1 justify-center">
        {menuItems.map((item) => {
          const Icon = item.icon;
          return (
            <a 
              href={item.href}
              class="group flex items-center space-x-2 text-white hover:text-white hover:bg-[#E75015]/20 px-4 py-2 rounded-full transition-all duration-300 hover:scale-105"
            >
              <Icon class="h-4 w-4 text-[#E75015] group-hover:scale-110 transition-all duration-300" />
