---
// Contact component
---

<div class="w-full bg-gray-50">
  <section class="py-16 max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold mb-4">
        Contáctanos
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-6">
        Estamos aquí para ayudarte con tu proyecto avícola
      </p>
      <div class="divider divider-warning w-24 mx-auto before:bg-maysol-orange after:bg-maysol-orange"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <div>
          <h3 class="text-2xl font-bold mb-8">Información de Contacto</h3>
          
          <!-- Phone -->
          <div class="flex items-start mb-8 group">
            <div class="w-12 h-12 bg-maysol-orange/10 rounded-full flex items-center justify-center mr-4 group-hover:bg-maysol-orange/20 transition-colors">
              <svg class="w-6 h-6 text-maysol-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Teléfonos</h4>
              <p class="text-gray-600 leading-relaxed">+502 5727-6592<br>+502 3071-5822</p>
            </div>
          </div>

          <!-- Schedule -->
          <div class="flex items-start mb-8 group">
            <div class="w-12 h-12 bg-maysol-orange/10 rounded-full flex items-center justify-center mr-4 group-hover:bg-maysol-orange/20 transition-colors">
              <svg class="w-6 h-6 text-maysol-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Horario de Atención</h4>
              <p class="text-gray-600 leading-relaxed">Lunes - Viernes: 07:00 - 18:00<br>Sábado: 07:00 - 13:00<br>Domingo: Cerrado</p>
            </div>
          </div>

          <!-- Location -->
          <div class="flex items-start group">
            <div class="w-12 h-12 bg-maysol-orange/10 rounded-full flex items-center justify-center mr-4 group-hover:bg-maysol-orange/20 transition-colors">
              <svg class="w-6 h-6 text-maysol-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Ubicación</h4>
              <p class="text-gray-600 leading-relaxed">4 Avenida 4-60 zona 2<br>San Mateo, Quetzaltenango<br>Guatemala</p>
            </div>
          </div>

        </div>
      </div>

      <!-- Map -->
      <div class="rounded-2xl shadow-lg overflow-hidden h-[500px]">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3856.244256648586!2d-91.59021440219826!3d14.867614141416881!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x858e9981c77ee441%3A0x2453ad4b1f8531f4!2sGRANJAS%20MAYSOL!5e0!3m2!1ses!2sus!4v1679628433193!5m2!1ses!2sus" 
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-full"
        ></iframe>
      </div>
    </div>
  </section>
</div>

<script>
  // WhatsApp trigger for contact section
  document.getElementById('contact-whatsapp')?.addEventListener('click', () => {
    const modal = document.getElementById('whatsapp-modal') as HTMLDialogElement;
    if (modal) {
      // Pre-fill message for general contact
      const messageTextarea = modal.querySelector('textarea[name="message"]') as HTMLTextAreaElement;
      if (messageTextarea) {
        messageTextarea.value = 'Hola, me gustaría obtener más información sobre sus productos y servicios.';
      }
      
      modal.showModal();
      document.body.style.overflow = 'hidden';
    }
  });
</script>