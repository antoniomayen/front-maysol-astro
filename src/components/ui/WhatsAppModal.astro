    // Validate current step
    const validateStep = (step: number): boolean => {
      let isValid = true;
      
      if (step === 1) {
        // Validate name
        const nameInput = document.getElementById('name-input') as HTMLInputElement;
        if (!nameInput.value.trim()) {
          document.getElementById('error-name')?.classList.remove('hidden');
          isValid = false;
        } else {
          document.getElementById('error-name')?.classList.add('hidden');
          formData.name = nameInput.value.trim();
        }
        
        // Validate phone
        const phoneInput = document.getElementById('phone-input') as HTMLInputElement;
        const phoneValidation = validatePhone(phoneInput.value);
        const errorPhoneElement = document.getElementById('error-phone');
        
        if (!phoneValidation.isValid) {
          if (errorPhoneElement) {
            errorPhoneElement.textContent = phoneValidation.message;
            errorPhoneElement.classList.remove('hidden');
          }
          isValid = false;
        } else {
          errorPhoneElement?.classList.add('hidden');
          formData.phone = phoneInput.value.replace(/\D/g, '');
        }
      } else if (step === 2) {
        // Validate product selection
        const selectedProduct = document.querySelector('.product-radio:checked') as HTMLInputElement;
        if (!selectedProduct) {
          document.getElementById('error-product')?.classList.remove('hidden');
          isValid = false;
        } else {
          document.getElementById('error-product')?.classList.add('hidden');
          formData.product = selectedProduct.value;
        }
      } else if (step === 3) {
        // Validate service selection
        const selectedService = document.querySelector('.service-radio:checked') as HTMLInputElement;
        if (!selectedService) {
          document.getElementById('error-service')?.classList.remove('hidden');
          isValid = false;
        } else {
          document.getElementById('error-service')?.classList.add('hidden');
          formData.service = selectedService.value;
        }
      } else if (step === 4) {
        // Validate region
        const regionSelect = document.getElementById('region-select') as HTMLSelectElement;
        if (!regionSelect.value) {
          document.getElementById('error-region')?.classList.remove('hidden');
          isValid = false;
        } else {
          document.getElementById('error-region')?.classList.add('hidden');
          formData.region = regionSelect.value;
        }
        
        // Validate municipality
        const municipalitySelect = document.getElementById('municipality-select') as HTMLSelectElement;
        if (!municipalitySelect.value) {
          document.getElementById('error-municipality')?.classList.remove('hidden');
          isValid = false;
        } else {
          document.getElementById('error-municipality')?.classList.add('hidden');
          formData.municipality = municipalitySelect.value;
        }
        
        // Get advisor preference
        formData.advisor = (document.getElementById('advisor-checkbox') as HTMLInputElement).checked;
      }
      
      return isValid;
    };
    
    // Update step display
    const updateStep = () => {
      // Hide all steps
      for (let i = 1; i <= 5; i++) {
        document.getElementById(`step-${i}`)?.classList.add('hidden');
      }
      
      // Show current step
      document.getElementById(`step-${currentStep}`)?.classList.remove('hidden');
      
      // Update progress
      if (stepCounter) stepCounter.textContent = currentStep.toString();
      if (stepTitle) stepTitle.textContent = stepTitles[currentStep as keyof typeof stepTitles];
      
      // Update progress bars
      for (let i = 1; i <= 5; i++) {
        const progressBar = document.getElementById(`progress-${i}`);
        if (progressBar) {
          progressBar.style.width = i <= currentStep ? '100%' : '0%';
        }
      }
      
      // Update buttons
      if (currentStep === 1) {
        prevBtn?.classList.add('hidden');
        nextBtn?.classList.remove('hidden');
        submitBtn?.classList.add('hidden');
      } else if (currentStep === 5) {
        prevBtn?.classList.remove('hidden');
        nextBtn?.classList.add('hidden');
        if (submitBtn) {
          submitBtn.classList.remove('hidden');
          submitBtn.classList.add('flex-1', 'flex', 'items-center', 'justify-center', 'gap-2');
        }
        updateSummary();
      } else {
        prevBtn?.classList.remove('hidden');
        nextBtn?.classList.remove('hidden');
        if (submitBtn) {
          submitBtn.classList.add('hidden');
          submitBtn.classList.remove('flex-1', 'flex', 'items-center', 'justify-center', 'gap-2');
        }
      }
      
      // Update name displays
      if (currentStep >= 2) {
        const firstName = formData.name.split(' ')[0];
        document.getElementById('user-name-display-1')!.textContent = firstName;
        document.getElementById('user-name-display-2')!.textContent = firstName;
      }
      
      scrollToBottom();
    };
    
    // Update summary display
    const updateSummary = () => {
      const productLabels: Record<string, string> = {
        'gallinas-ponedoras': 'Gallinas ponedoras',
        'pollos-engorde': 'Pollos de engorde',
        'huevos': 'Huevos frescos',
        'cerdos': 'Cerdos lechones',
        'alimentos': 'Alimentos balanceados',
        'otros': 'Otros productos'
      };
      
      const serviceLabels: Record<string, string> = {
        'vacunacion': 'Vacunaci√≥n',
        'despique': 'Despique',
        'visitas-tecnicas': 'Visitas t√©cnicas',
        'asesoria': 'Asesor√≠a t√©cnica',
        'capacitacion': 'Capacitaci√≥n',
        'ninguno': 'Solo productos'
      };
      
      document.getElementById('summary-name')!.textContent = formData.name;
      document.getElementById('summary-phone')!.textContent = `üá¨üáπ +502 ${formatPhone(formData.phone)}`;
      document.getElementById('summary-product')!.textContent = productLabels[formData.product] || formData.product;
      document.getElementById('summary-service')!.textContent = serviceLabels[formData.service] || 'No especificado';
      document.getElementById('summary-municipality')!.textContent = `${formData.municipality}, ${formData.region}`;
      document.getElementById('summary-advisor')!.textContent = formData.advisor ? 'S√≠' : 'No';
    };
    
    // Handle next button
    nextBtn?.addEventListener('click', () => {
      if (validateStep(currentStep)) {
        currentStep++;
        updateStep();
      }
    });
    
    // Handle prev button
    prevBtn?.addEventListener('click', () => {
      currentStep--;
      updateStep();
    });
    
    // Handle submit
    submitBtn?.addEventListener('click', () => {
      formData.additionalMessage = (document.getElementById('additional-message') as HTMLTextAreaElement).value;
      
      // Build WhatsApp message
      const productLabels: Record<string, string> = {
        'gallinas-ponedoras': 'Gallinas ponedoras',
        'pollos-engorde': 'Pollos de engorde',
        'huevos': 'Huevos frescos',
        'cerdos': 'Cerdos lechones',
        'alimentos': 'Alimentos balanceados',
        'otros': 'Otros productos'
      };
      
      const serviceLabels: Record<string, string> = {
        'vacunacion': 'Vacunaci√≥n',
        'despique': 'Despique',
        'visitas-tecnicas': 'Visitas t√©cnicas',
        'asesoria': 'Asesor√≠a t√©cnica',
        'capacitacion': 'Capacitaci√≥n',
        'ninguno': 'Solo productos'
      };
      
      let message = `¬°Hola Granjas Maysol!\n\n`;
      message += `Mi nombre es: ${formData.name}\n`;
      message += `Tel√©fono: +502 ${formatPhone(formData.phone)}\n`;
      message += `Ubicaci√≥n: ${formData.municipality}, ${formData.region}\n\n`;
      message += `Producto de inter√©s: ${productLabels[formData.product]}\n`;
      message += `Servicio requerido: ${serviceLabels[formData.service]}\n`;
      
      if (formData.advisor) {
        message += `Solicito contacto con asesor t√©cnico\n`;
      }
      
      if (formData.additionalMessage) {
        message += `\nInformaci√≥n adicional:\n${formData.additionalMessage}`;
      }
      
      message += `\n\nEnviado desde formulario web de Granjas Maysol`;
      
      // Use the first available number
      const whatsappUrl = `https://wa.me/${whatsappNumbers[0]}?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_blank');
      
      // Close modal and reset
      hideModal();
    });
    
    // Product selection styling
    document.querySelectorAll('.product-radio').forEach(radio => {
      radio.addEventListener('change', (e) => {
        // Reset all product styles
        document.querySelectorAll('.product-option').forEach(option => {
          option.classList.remove('border-maysol-orange', 'bg-maysol-orange/20');
          option.classList.add('border-gray-300');
        });
        document.querySelectorAll('.product-radio-visual').forEach(visual => {
          visual.classList.remove('border-maysol-orange');
          visual.classList.add('border-gray-400');
        });
        document.querySelectorAll('.product-radio-dot').forEach(dot => dot.classList.add('hidden'));
        
        // Apply selected style
        const target = e.target as HTMLInputElement;
        if (target.checked) {
          const container = target.closest('.product-option-container');
          const option = container?.querySelector('.product-option');
          const visual = container?.querySelector('.product-radio-visual');
          const dot = container?.querySelector('.product-radio-dot');
          
          option?.classList.remove('border-gray-300');
          option?.classList.add('border-maysol-orange', 'bg-maysol-orange/20');
          visual?.classList.remove('border-gray-400');
          visual?.classList.add('border-maysol-orange');
          dot?.classList.remove('hidden');
        }
      });
    });
    
    // Service selection styling
    document.querySelectorAll('.service-radio').forEach(radio => {
      radio.addEventListener('change', (e) => {
        // Reset all service styles
        document.querySelectorAll('.service-option').forEach(option => {
          option.classList.remove('border-maysol-orange', 'bg-maysol-orange/20');
          option.classList.add('border-gray-300');
        });
        document.querySelectorAll('.service-radio-visual').forEach(visual => {
          visual.classList.remove('border-maysol-orange');
          visual.classList.add('border-gray-400');
        });
        document.querySelectorAll('.service-radio-dot').forEach(dot => dot.classList.add('hidden'));
        
        // Apply selected style
        const target = e.target as HTMLInputElement;
        if (target.checked) {
          const container = target.closest('.service-option-container');
          const option = container?.querySelector('.service-option');
          const visual = container?.querySelector('.service-radio-visual');
          const dot = container?.querySelector('.service-radio-dot');
          
          option?.classList.remove('border-gray-300');
          option?.classList.add('border-maysol-orange', 'bg-maysol-orange/20');
          visual?.classList.remove('border-gray-400');
          visual?.classList.add('border-maysol-orange');
          dot?.classList.remove('hidden');
        }
      });
    });
    
    // Region selection handler
    const regionSelect = document.getElementById('region-select') as HTMLSelectElement;
    const municipalitySelect = document.getElementById('municipality-select') as HTMLSelectElement;
    
    // Guatemala regions data
    const guatemalaRegions: {[key: string]: string[]} = {
      "Occidental": ["Quetzaltenango", "San Marcos", "Huehuetenango", "Totonicap√°n", "Solol√°"],
      "Sur Occidental": ["Retalhuleu", "Suchitep√©quez"],
      "Central": ["Chimaltenango", "Escuintla", "Guatemala", "Sacatep√©quez"],
      "Sur Oriental": ["Santa Rosa", "Jutiapa"],
      "Oriental": ["Jalapa", "Chiquimula", "Zacapa", "El Progreso", "Izabal"],
      "Norte": ["Quich√©", "Alta Verapaz", "Baja Verapaz", "Pet√©n"]
    };
    
    regionSelect?.addEventListener('change', (e) => {
      const selectedRegion = (e.target as HTMLSelectElement).value;
      
      // Clear municipality selection
      municipalitySelect.innerHTML = '<option value="">Selecciona tu municipio...</option>';
      
      if (selectedRegion && guatemalaRegions[selectedRegion]) {
        // Enable municipality select
        municipalitySelect.disabled = false;
        
        // Add municipalities for selected region
        guatemalaRegions[selectedRegion].forEach((municipality: string) => {
          const option = document.createElement('option');
          option.value = municipality;
          option.textContent = municipality;
          municipalitySelect.appendChild(option);
        });
      } else {
        // Disable municipality select if no region selected
        municipalitySelect.disabled = true;
      }
    });
    
    // Phone input formatting
    const phoneInput = document.getElementById('phone-input') as HTMLInputElement;
    phoneInput?.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      let value = target.value.replace(/\D/g, '');
      
      if (value.length > 8) {
        value = value.slice(0, 8);
      }
      
      if (value.length >= 4) {
        value = value.slice(0, 4) + '-' + value.slice(4);
      }
      
      target.value = value;
    });
    
    // Modal controls
    modalBackdrop?.addEventListener('click', hideModal);
    modalCloseBtn?.addEventListener('click', hideModal);
    
    // ESC key to close
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.open) {
        hideModal();
      }
    });
    
    // Setup modal triggers
    const setupModalTriggers = () => {
      const triggers = document.querySelectorAll('#whatsapp-trigger, .mobile-whatsapp-trigger, #hero-whatsapp-btn, #floating-whatsapp, #contact-whatsapp, #faq-whatsapp, #services-cta, #empty-state-whatsapp');
      
      triggers.forEach(trigger => {
        trigger.addEventListener('click', (e) => {
          e.preventDefault();
          showModal();
        });
      });
    };
    
    setupModalTriggers();
  });
</script>

