---
// src/components/ui/WhatsAppModal.astro 
import { User, Tag, MapPin, MessageCircle } from 'lucide-astro';

const productOptions = [
  { value: "Gallinas ponedoras", label: "Gallinas ponedoras" },
  { value: "Pollos de engorde", label: "Pollos de engorde (Chompipollos)" },
  { value: "Huevos", label: "Huevos (blancos o colorados)" },
  { value: "Cerdos", label: "Cerdos lechones" },
  { value: "Alimentos", label: "Alimentos balanceados" },
  { value: "Materias primas", label: "Materias primas (maíz, soya)" },
  { value: "Servicios", label: "Servicios (vacunación, despique)" },
  { value: "Asesoría", label: "Asesoría técnica" },
  { value: "Otro", label: "Otro (especificar en mensaje)" }
];
---

<!-- Modal with fixed backdrop -->
<dialog id="whatsapp-modal" class="modal fixed inset-0 z-50 flex items-center justify-center w-full h-full backdrop:backdrop-blur-sm backdrop:bg-black/50">
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="modal-backdrop"></div>
  
  <!-- Modal -->
  <div class="relative bg-white rounded-lg shadow-2xl w-full max-w-md mx-4 max-h-[90vh] overflow-y-auto">
    <!-- Header -->
    <div class="bg-[#20bf6b] text-white p-6 rounded-t-lg">
      <div class="flex items-center justify-between">
        <h2 class="flex items-center gap-2 text-xl font-bold">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.785"/>
          </svg>
          Contáctanos por WhatsApp
        </h2>
        <button
          id="modal-close-btn"
          class="text-white hover:bg-white/20 p-1 rounded-full transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Content -->
    <div class="p-6">
      <!-- Agent Image & Description -->
      <div class="text-center mb-6">
        <div class="mb-4">
          <img
            src="/images/agent_chat.png"
            alt="Granjas Maysol"
            width="120"
            height="120"
            class="mx-auto rounded-full"
          />
        </div>
        <h3 class="text-xl font-semibold text-[#da3414] mb-2">
          Atención personalizada para tu proyecto
        </h3>
        <p class="text-gray-600 text-sm">
          Cuéntanos qué necesitas y te responderemos a la brevedad
        </p>
      </div>

      <!-- Form -->
      <form id="whatsapp-form" class="space-y-4">
        <!-- Name -->
        <div class="space-y-2">
          <label class="flex items-center gap-2 font-semibold text-sm text-gray-700">
            <User class="w-4 h-4 text-[#da3414]" />
            Tu nombre
          </label>
          <input
            type="text"
            name="name"
            placeholder="Ejemplo: Ana López"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#da3414]/50 text-gray-900 bg-white"
            required
          />
          <p class="text-red-500 text-sm hidden error-name">Por favor ingresa tu nombre</p>
        </div>

        <!-- Interest -->
        <div class="space-y-2">
          <label class="flex items-center gap-2 font-semibold text-sm text-gray-700">
            <Tag class="w-4 h-4 text-[#da3414]" />
            ¿Qué producto te interesa?
          </label>
          <select
            name="interest"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#da3414]/50 text-gray-900 bg-white"
            required
          >
            <option value="">Selecciona una opción</option>
            {productOptions.map((option) => (
              <option value={option.value}>
                {option.label}
              </option>
            ))}
          </select>
          <p class="text-red-500 text-sm hidden error-interest">Por favor selecciona un producto</p>
        </div>

        <!-- Location -->
        <div class="space-y-2">
          <label class="flex items-center gap-2 font-semibold text-sm text-gray-700">
            <MapPin class="w-4 h-4 text-[#da3414]" />
            ¿De qué municipio nos escribes?
          </label>
          <input
            type="text"
            name="location"
            placeholder="Ejemplo: Quetzaltenango"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#da3414]/50 text-gray-900 bg-white"
            required
          />
          <p class="text-red-500 text-sm hidden error-location">Por favor ingresa tu ubicación</p>
        </div>

        <!-- Message -->
        <div class="space-y-2">
          <label class="flex items-center gap-2 font-semibold text-sm text-gray-700">
            <MessageCircle class="w-4 h-4 text-[#da3414]" />
            Tu mensaje
          </label>
          <textarea
            rows="3"
            name="message"
            placeholder="Ejemplo: Me gustaría información sobre gallinas ponedoras, precios y disponibilidad"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#da3414]/50 resize-none text-gray-900 bg-white"
            required
          ></textarea>
          <p class="text-red-500 text-sm hidden error-message">Por favor ingresa tu mensaje</p>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-[#20bf6b] hover:bg-[#20bf6b]/90 text-white py-3 px-4 rounded-lg font-semibold transition-colors flex items-center justify-center gap-2"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.785"/>
          </svg>
          Enviar mensaje por WhatsApp
        </button>
      </form>
    </div>
  </div>
</dialog>

<script>
  // WhatsApp Modal functionality - Modern version inspired by Next.js
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('whatsapp-modal') as HTMLDialogElement;
    const modalBackdrop = document.getElementById('modal-backdrop');
    const modalCloseBtn = document.getElementById('modal-close-btn');
    const form = document.getElementById('whatsapp-form') as HTMLFormElement;
    const whatsappNumber = '50230715822';
    
    let formData: {
      name: string;
      interest: string;
      location: string;
      message: string;
    } = {
      name: '',
      interest: '',
      location: '',
      message: ''
    };
    
    let errors: Record<string, string> = {};
    
    // Show modal
    const showModal = () => {
      if (modal) {
        modal.showModal();
        document.body.style.overflow = 'hidden';
      }
    };
    
    // Hide modal
    const hideModal = () => {
      if (modal) {
        modal.close();
        document.body.style.overflow = 'unset';
      }
    };
    
    // Validate form
    const validateForm = () => {
      const newErrors: Record<string, string> = {};
      
      if (!formData.name.trim()) newErrors.name = 'Por favor ingresa tu nombre';
      if (!formData.interest) newErrors.interest = 'Por favor selecciona un producto';
      if (!formData.location.trim()) newErrors.location = 'Por favor ingresa tu ubicación';
      if (!formData.message.trim()) newErrors.message = 'Por favor ingresa tu mensaje';
      
      errors = newErrors;
      
      // Show/hide error messages
      Object.keys(formData).forEach(field => {
        const errorElement = document.querySelector(`.error-${field}`);
        if (errors[field]) {
          errorElement?.classList.remove('hidden');
        } else {
          errorElement?.classList.add('hidden');
        }
      });
      
      return Object.keys(newErrors).length === 0;
    };
    
    // Handle form submission
    const handleSubmit = (e: Event) => {
      e.preventDefault();
      
      if (!validateForm()) return;
      
      const whatsappMessage = `Hola Granjas Maysol! Mi nombre es ${formData.name} de ${formData.location}. Me interesa información sobre: ${formData.interest}. ${formData.message}`;
      
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
      window.open(whatsappUrl, '_blank');
      
      // Reset form and close modal
      formData = { name: '', interest: '', location: '', message: '' };
      errors = {};
      form?.reset();
      hideModal();
    };
    
    // Handle input changes
    const handleInputChange = (field: keyof typeof formData, value: string) => {
      formData[field] = value;
      if (errors[field]) {
        delete errors[field];
        const errorElement = document.querySelector(`.error-${field}`);
        errorElement?.classList.add('hidden');
      }
    };
    
    // Event listeners
    modalBackdrop?.addEventListener('click', hideModal);
    modalCloseBtn?.addEventListener('click', hideModal);
    form?.addEventListener('submit', handleSubmit);
    
    // Input event listeners
    const nameInput = form?.querySelector('input[name="name"]');
    const interestSelect = form?.querySelector('select[name="interest"]');
    const locationInput = form?.querySelector('input[name="location"]');
    const messageTextarea = form?.querySelector('textarea[name="message"]');
    
    nameInput?.addEventListener('input', (e) => handleInputChange('name', (e.target as HTMLInputElement)?.value || ''));
    interestSelect?.addEventListener('change', (e) => handleInputChange('interest', (e.target as HTMLSelectElement)?.value || ''));
    locationInput?.addEventListener('input', (e) => handleInputChange('location', (e.target as HTMLInputElement)?.value || ''));
    messageTextarea?.addEventListener('input', (e) => handleInputChange('message', (e.target as HTMLTextAreaElement)?.value || ''));
    
    // ESC key to close
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && (modal as HTMLDialogElement)?.open) {
        hideModal();
      }
    });
    
    // Close on backdrop click
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        hideModal();
      }
    });
    
    // Set up modal triggers
    const setupModalTriggers = () => {
      const triggers = document.querySelectorAll('#whatsapp-trigger, .mobile-whatsapp-trigger, #hero-whatsapp-btn, #floating-whatsapp');
      
      triggers.forEach(trigger => {
        trigger.addEventListener('click', (e) => {
          e.preventDefault();
          showModal();
        });
      });
    };
    
    setupModalTriggers();
  });
</script>

<style>
  /* Modern modal animations inspired by Next.js version */
  #whatsapp-modal[open] {
    animation: modalFadeIn 0.3s ease-out;
  }
  
  #whatsapp-modal[open] .relative {
    animation: modalSlideIn 0.3s ease-out;
  }
  
  @keyframes modalFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  
  /* Custom input focus styles */
  #whatsapp-modal input:focus,
  #whatsapp-modal select:focus,
  #whatsapp-modal textarea:focus {
    border-color: #da3414 !important;
    outline: 2px solid rgba(218, 52, 20, 0.5) !important;
    outline-offset: -2px !important;
  }
  
  /* Ensure proper text colors */
  #whatsapp-modal input,
  #whatsapp-modal select,
  #whatsapp-modal textarea {
    color: #1f2937 !important;
    background-color: white !important;
  }
  
  #whatsapp-modal option {
    color: #1f2937 !important;
    background-color: white !important;
  }
</style>